<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/android_4"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="#0073A0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/ButtonStyle"
        android:layout_width="255dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Text_View"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="результат игры" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        style="@style/ButtonStyle"
        android:layout_width="258dp"
        android:layout_height="334dp"
        android:layout_below="@id/linearLayout3"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Text_View2"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/true_answer"
            android:text="Победитель" />

        <TextView
            android:id="@+id/Text_View3"
            style="@style/TextStyle"
            android:background="@drawable/button_new_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="23dp"
            android:text="второе место " />
        <TextView
            android:id="@+id/Text_View4"
            style="@style/TextStyle"
            android:background="@drawable/button_new_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View3"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="23dp"
            android:text="Третье место " />
        <TextView
            android:id="@+id/Text_View5"
            style="@style/TextStyle"
            android:background="@drawable/button_new_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="23dp"
            android:text="четвертое мест" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>