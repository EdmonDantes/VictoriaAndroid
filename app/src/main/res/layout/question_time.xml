<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/android_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0073A0" />

    <EditText
        style="@style/ButtonStyle"
        android:text="Вопрос который может быть очень длинным, настолько насколько мы не знаем вообще. Можно ограничиватьколичество символов"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <EditText
        style="@style/ButtonStyle"
        android:text="00:05"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="500dp"
        android:layout_marginLeft="25dp" />

    <Button
        style="@style/TextStyle"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/true_answer"
        android:text="Ответить"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="400dp"
        android:layout_marginEnd="25dp" />

</android.support.constraint.ConstraintLayout>